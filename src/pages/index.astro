---
import Layout from '../layouts/Layout.astro';
import * as README from '../../README.md';
---

<Layout title={README.getHeadings()[0]!.text}>
	<main set:html={README.compiledContent()} />
</Layout>

<style>
	h1 {
		margin: 2rem 0;
	}

	main {
		margin: auto;
		padding: 1em;
		max-width: 60ch;
	}
</style>
